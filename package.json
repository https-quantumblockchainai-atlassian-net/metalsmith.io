{
  "name": "metalsmith.io",
  "private": true,
  "scripts": {
    "start": "cross-env NODE_ENV=development NODE_PATH=./node_modules npm run watch & npm run serve",
    "build": "cross-env NODE_ENV=production node metalsmith.js",
    "watch": "nodemon metalsmith.js",
    "serve": "browser-sync start --server 'build' --files 'build/**'",
    "lint:css": "stylelint '**/*.scss'",
    "lint:js": "eslint '**/*.js'",
    "lint:prettier": "prettier --list-different '**/*.{js,scss}'",
    "format": "prettier --write '**/*.{js,scss}'",
    "test": "npm run build && mocha metalsmith.test.js"
  },
  "nodemonConfig": {
    "watch": [
      "src",
      "lib"
    ],
    "ext": "js scss njk json html md"
  },
  "devDependencies": {
    "@metalsmith/collections": "^1.3.0",
    "@metalsmith/drafts": "^1.2.0",
    "@metalsmith/in-place": "^4.5.0",
    "@metalsmith/js-bundle": "^0.2.0",
    "@metalsmith/layouts": "^2.6.0",
    "@metalsmith/metadata": "^0.2.0",
    "@metalsmith/postcss": "^5.1.0",
    "@metalsmith/sass": "^1.1.0",
    "@metalsmith/table-of-contents": "^1.0.0",
    "anchor-js": "^4.3.1",
    "autoprefixer": "^10.4.13",
    "browser-sync": "^2.27.10",
    "cheerio": "^1.0.0-rc.12",
    "cross-env": "^7.0.3",
    "cssnano": "^5.1.14",
    "eslint": "^8.26.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-compat": "^4.0.2",
    "eslint-plugin-import": "^2.26.0",
    "highlight.js": "^11.6.0",
    "husky": "^8.0.1",
    "jstransformer-marked": "^1.2.0",
    "jstransformer-nunjucks": "^1.1.0",
    "lint-staged": "^13.0.3",
    "metalsmith": "^2.5.1",
    "metalsmith-debug-ui": "^0.3.2",
    "metalsmith-favicons": "^1.0.0",
    "metalsmith-html-minifier": "^4.0.1",
    "metalsmith-if": "^0.1.1",
    "metalsmith-imagemin": "^4.1.4",
    "metalsmith-sitemap": "^1.2.2",
    "metalsmith-uglify": "^2.4.1",
    "mocha": "^10.1.0",
    "nodemon": "^2.0.20",
    "postcss": "^8.4.18",
    "postcss-custom-media": "^8.0.2",
    "postcss-normalize": "^10.0.1",
    "postcss-preset-env": "^7.8.2",
    "postcss-scss": "^4.0.5",
    "prettier": "^2.7.1",
    "sanitize.css": "^13.0.0",
    "stylelint": "^14.14.1",
    "stylelint-config-prettier-scss": "0.0.1",
    "stylelint-config-standard-scss": "^6.1.0",
    "stylelint-no-unsupported-browser-features": "^6.0.1",
    "stylelint-selector-bem-pattern": "^2.1.1"
  },
  "dependencies": {
    "blazy": "^1.8.2"
  },
  "engines": {
    "node": ">=14.17.0"
  }
}
